<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.Design.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <!-- colorPrimary  Toolbar背景色-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!-- colorPrimaryDark顶部状态栏背景色-->
        <item name="colorPrimaryDark">@color/black</item>
        <!-- 默认系统组件颜色  这个属性是用于配置控件被选中时显示的颜色，eg:radio,checkBox等等。-->
        <item name="colorAccent">@color/black</item>
        <!--配置控件初始化显示时的颜色。-->
        <item name="colorControlNormal">#000000</item>
        <!--设置toolbar字体颜色，设置后dialog中的title和message文字也将变化-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->
        <!--背景颜色-->
        <!--<item name="android:windowBackground">@color/white</item>-->
        <!--colorControlHighlight:配置点击控件时的效果颜色-->
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>
    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textColor">#000</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MenuTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/out_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/in_from_left</item>
    </style>
    <style name="loading_dialog1" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">true</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item> <!--背景是否模糊显示-->
    </style>
    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">true</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
    </style>

    <!--字体style-->
    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/Default_Text_Size</item>
        <item name="android:background">@color/touming</item>
        <item name="android:textColorHint">@color/hintcolor</item>
    </style>


    <!--Button style-->

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/Default_Text_Size</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <!--popwindow顶部划出  划进-->
    <style name="bottom_popwindow_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_top</item>
        <item name="android:windowExitAnimation">@anim/out_from_bottom</item>
    </style>
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>
</resources>
