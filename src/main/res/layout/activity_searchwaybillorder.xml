<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_gray_line"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text=""
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="10dp"
                android:paddingHorizontal="10dp"
                android:hint="@string/please_input_yundanhao"
                android:singleLine="true"
                android:textColor="@color/black_666"
                android:textSize="13sp"
                android:background="@drawable/siji_search_grayline_bg_shape"/>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="@string/canal"
                android:gravity="center"
                android:textColor="@color/black_333"
                android:background="@drawable/maketruedialog_background_shape"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gray_line"/>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </com.liaoinstan.springview.widget.SpringView>


</LinearLayout>