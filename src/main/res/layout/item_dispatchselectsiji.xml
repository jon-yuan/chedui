<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/btn_addsiji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="添加主司机"
            android:background="@drawable/background_blue_image_shape"/>
        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_dianhua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"

                    android:textColor="@color/black_333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_chepaihao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="@string/change"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_delete_blue_5"/>
                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="删除"
                    android:background="@drawable/btn_delete_red_5"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>